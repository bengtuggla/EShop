@model IEnumerable<ASPNETMVC_Eshop.Models.Product>

@{
    ViewData["Title"] = "Index";
}
<div class="d-flex justify-content-between align-items-center">
    <h1 class="text-primary">Our Products</h1>
    <h4>
        <a asp-action="Create">Create New Product >></a>
    </h4>
</div>



<div class="row row-cols-1 row-cols-md-4 g-4">
    @foreach (var item in Model)
    {

        // MY CODE HERE


        <!-- Card start -->
    <div class="col">
        <div class="card h-100">

            <div class="card-body d-flex flex-column justify-content-between">
                <p class="small "> @Html.DisplayFor(modelItem => item.SubCategory.Name)</p>
                <img src="@Html.DisplayFor(modelItem => item.ImageUrl)" class="card-img-top" alt="...">
                <h5 class="card-title">@Html.DisplayFor(modelItem => item.Name)</h5>
                <p class="card-text"> @Html.DisplayFor(modelItem => item.Description) </p>
                <div class="d-flex justify-content-between align-items-center">
                    <p class="text-danger priced">@Html.DisplayFor(modelItem => item.Price) :-</p>
                    <button class="btn btn-outline-primary"><i class="fas fa-shopping-cart me-2"></i>Köp</button>
                </div>
            </div>
            <div class="card-footer d-flex justify-content-between align-items-center">
                <small class="text-muted"><i class="fas fa-box-open me-3 text-success"></i>In stock</small>
                <p class="mt-3">@Html.ActionLink("Read more", "Details", new { id = item.Id }) >></p>
            </div>
        </div>

      
    </div>
        <!-- Card end -->
        

    }
    <div>

    </div>

</div>
